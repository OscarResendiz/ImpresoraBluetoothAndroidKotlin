<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Impresora Bluetooth"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Estado de conexión -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: "
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desconectado"
            android:textSize="14sp"
            android:textColor="@android:color/holo_red_dark" />

    </LinearLayout>

    <!-- Spinner de dispositivos -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar impresora:"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <Spinner
        android:id="@+id/deviceSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp" />

    <!-- Botones de conexión -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/connectButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Conectar"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/disconnectButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Desconectar"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="16dp" />

    <!-- Sección de impresión -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opciones de Impresión"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Botones de impresión -->
    <Button
        android:id="@+id/printSampleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Imprimir Ticket de Ejemplo"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/printWithImageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Imprimir Ticket con Imagen (GS v 0)"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/testPrintButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Imprimir Prueba de Conexión"
        android:layout_marginBottom="12dp" />

    <!-- Preview del ticket -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vista previa del ticket:"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/previewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aquí se mostrará la vista previa del ticket"
            android:textSize="10sp"
            android:fontFamily="monospace"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white" />

    </ScrollView>

    <!-- Mensajes -->
    <TextView
        android:id="@+id/messageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@android:color/holo_blue_dark"
        android:gravity="center"
        android:minHeight="30dp" />

</LinearLayout>